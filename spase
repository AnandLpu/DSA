void display()
{
    int i;
    struct node*current=head;
    if(head==NULL)
    {
        printf("Linked List is empty .\n");
    }
    else
    {
        for(i=0;i<count+1;i++)
        {
            printf("%d\t%d\t%d\n",current->row,current->column,current->data);
            current=current->link;

        }
    }
}
